<!-- _add_comments_by_look -->

	<%= form_for [@look, Comment.new],  html: {method: :post} do |c| %>
	<div class="row">
		<div class="span">
			<%= image_tag current_user.avatar.url(:thumb) %>
		</div>
		<div class="span">
			<p><%= c.label "Enter your comment here:" %></p>
			<p><%= c.text_area :text, row: 6 %></p>

			<p><%= c.submit "Submit Comment", class: "btn btn-tiny" %></p>

		</div>
	</div>
	<% end %>
