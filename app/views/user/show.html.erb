<div class="row">
	
    <div class="span9">
      <div class="row">

        <% if @look_item.any? %>
          
          <% @look_item.each do |l| %>
            <div class="span3">

<!-- Start layouts of looks+photos -->
<!-- Please put this into the helper functions -->
<% lp = l.lookPhotos.first %>
<% unless lp.nil? %>
  <%= link_to image_tag(lp.photo.url), look_path(l.id) %>
<% end %>

<p><%= l.description %></p>
<!-- Yet to add human readable time of posting -->
<ul>
  <li><%= link_to "View Details", look_path(l.id) %></li>
  <% if l.user_id = current_user.id %>
    <li><%= link_to "Edit", edit_look_path(l.id), class: "action" %></li>
    <li><%= link_to "Delete", look_path(l.id), confirm: "Are you sure you want to delete this look?", method: :delete %></li>
  <% end %>
<!-- End layouts of looks+photos -->

            </div><!--/span-->
          <% end %>

        <% else %>
          <div class="jumbotron">
            <h3>No looks had been uploaded by this user, please come back later</h3>
          </div>
        <% end %>
        
      </div><!--/row-->
    </div><!--/span-->
    <div class="span3" id="user_sidebar">
      <%= render "shared/user_sidebar" %>
    </div>
</div>
